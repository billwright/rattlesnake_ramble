<table class="table">
  <tr>
    <th>Racer</th>
    <th>Age</th>
    <th>Paid?</th>
    <th>Time</th>
  </tr>
  
  <% @race_edition.race_entries.each do |race_entry| %>
    <tr>
      <td><%= race_entry.racer.name %></td>
      <td><%= race_entry.racer.current_age %></td>
      <td><%= race_entry.paid %></td>
      <td><%= race_entry.elapsed_time %></td>
    </tr>
  <% end %>
</table>