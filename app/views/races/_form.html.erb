<%= render 'shared/errors', model_object: @race %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @race do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>
      
      <%= f.submit(@race.new_record? ? 'Create Race' : 'Update Race', class: "btn btn-success") %>
    <% end %>
  </div>
</div>