<div class="row">
  <div class="col-md-6">
    <h1>All Races</h1>
    <hr/>
  </div>
  <div class="col-md-6 pull-right new-model-button">
    <%= link_to "New Race", new_race_path, class: "btn btn-success" %>
  </div>
</div>

<% @races.each do |race| %>
  <div class="row">
    <div class="col-lg-8 well">
      <h4><%= link_to race.name, race_path(race) %></h4>
      <p><%= race.description %></p>
      <p>
        <span class='quiet'><small> <%= time_ago_in_words(race.created_at) %></small></span>
      </p>
    </div>
  </div>
<% end %>
